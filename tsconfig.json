{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",

    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  }
}
